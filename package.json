{
  "name": "@cap/root",
  "version": "1.0.0",
  "description": "Bootstrap an app from templates.",
  "type": "module",
  "packageManager": "pnpm@8.6.11",
  "engines": {
    "node": ">=18.12"
  },
  "scripts": {
    "typecheck": "turbo typecheck",
    "build": "turbo build",
    "dev:cli": "turbo --filter=cli dev",
    "start:cli": "turbo --filter=cli start",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "turbo": "^1.10.12"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6"
  }
}
